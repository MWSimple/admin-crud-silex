{% extends "crudViews/layout.html.twig" %}

{% block title %}
{{ parent() }} - {{ app.translator.trans('views.new.creation', { '%entity%': options.table }) }}
{% endblock %}

{% block page %}
<div class="hero-unit">
    <h2>{{ app.translator.trans('views.new.creation', { '%entity%': options.table }) }}</h2>

    <form action="{{ path(options.route ~ '_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        <p>
            <button type="submit" class="btn btn-success">{{ app.translator.trans('views.new.create') }}</button>
        </p>
    </form>

    <div class="span2">
        <a href="{{ path(options.route) }}" class="btn">
            {{ app.translator.trans('views.recordactions.backtothelist') }}
        </a>
    </div>
</div>
{% endblock %}